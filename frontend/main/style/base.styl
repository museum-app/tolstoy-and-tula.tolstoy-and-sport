@import './palette'
@import './font/oswald/index'
@import './font/nocturne-serif/index'

*
  box-sizing border-box
  margin 0
  padding 0
  transition .3s all
  user-select none

::-webkit-scrollbar
  display none
  width 0

::-webkit-scrollbar-track
  display none

::-webkit-scrollbar-thumb
  display none


body
  color $minor

.adaptive
  margin 0 auto
  width 85.5vw

.full
  position absolute
  top 0
  left 0
  right 0
  bottom 0

.flex-center
  align-items center
  display flex
  justify-content center